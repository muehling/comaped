<% content_for :body do %>
  <nav class="navbar navbar-light navbar-expand-md bg-light mb-4 p-2">
    <div class="container-xxl">
      <a class="navbar-brand">CoMapEd</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-md-flex justify-content-between" id="navbarContent">
        <div class="spacer"></div>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to t('.projects'), user_projects_path(@login), class: "nav-link #{" active" if params[:controller] == 'projects'}"%></li>
          <li class="nav-item"><%= link_to t('.my_data'), user_path(@login), class: "nav-link #{" active" if params[:controller] == 'users' && params[:id]}"%></li>
        </ul>
        <ul class="navbar-nav">
          <% if @login.admin? %>
            <li class="nav-item"><%= link_to t('.users'), users_path, class: "nav-link#{" active" if params[:controller] == 'users' && !params[:id]}"%></li>
          <% end %>
          <li class="nav-item"><%= link_to t('privacy') + ' & ' + t('imprint') , '#', data: {"bs-toggle": "modal", "bs-target": "#legal"}, class: "nav-link"%></li>
          <li class="nav-item"><%= link_to t('logout'), logout_path(target: 'backend'), class: "nav-link"%></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-xxl">
    <div id="alert">
      <% unless notice.blank? %>
        <div class="alert alert-info alert-dismissible">
          <span id="notice"><%= raw(notice) %></span>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span class="bi-x" aria-hidden="true"></span></button>
        </div>
      <% end %>
    </div>

    <%= yield %>
  </div>

  <%= render 'legal'%>
<% end %>

<%= render template: "layouts/application" %>