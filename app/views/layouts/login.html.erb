<% content_for :body do %>

  <div id="alert">
    <% unless notice.blank? %>
      <div class="alert alert-info">
        <p id="notice"><%= raw(notice) %></p>
      </div>
    <% end %>
  </div>

  <div class="container-fluid">

    <div class="row">
      <div class="col">
          <div class="card m-4" id="login">
            <div class="card-header">CoMapEd 2</div>
          <div class="card-content p-4">
            <p>
              <%= yield %>
            </p>
            <p class="text-center">
              <mark>
                <%= link_to t('privacy'), '#', data: {"bs-toggle": "modal", "bs-target": "#privacy"}%>
              -
              <%= link_to t('imprint'), '#',  data: {"bs-toggle": "modal", "bs-target": "#imprint"}%>
              </mark>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="privacy" tabindex="-1" role="dialog" aria-labelledby="privacyLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="privacyLabel"><%= t('privacy') %></h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></span></button>
          </div>
          <div class="modal-body">
            <%= render 'privacy_' + action_name%>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="imprint" tabindex="-1" role="dialog" aria-labelledby="imprintLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="imprintLabel"><%= t('imprint') %></h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></span></button>
          </div>
          <div class="modal-body">
            <%= render 'imprint'%>
          </div>
        </div>
      </div>
    </div>

  </div>
<% end %>
<%= render template: "layouts/application" %>
