                                oldColor = $('#currentColor').css('background-color');
                                color = $('#currentColor').css('background-color');
                                showForm();
                            }
                            <% end %>
                        },
                        175);
                }
                else
                if (params.edges.length > 0) {
                    id = params.edges[0];
                    setTimeout(function() {
                            if (mode == none) {
                                canvasX = params.pointer.canvas.x;
                                canvasY = params.pointer.canvas.y;
                                mode = editEdge;
                                showForm();
                            }
                        },
                        175);
                }
            }
      }
    });

